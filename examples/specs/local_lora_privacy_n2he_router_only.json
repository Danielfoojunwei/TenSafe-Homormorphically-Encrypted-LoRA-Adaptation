{
    "spec_version": "1.0",
    "run_name": "local-lora-n2he-router",
    "tenant_id": "demo-tenant",
    "execution_backend": "local",
    "training_method": "lora",
    "base_model_ref": "microsoft/phi-2",
    "dataset_source": {
        "source_type": "huggingface",
        "path": "tatsu-lab/alpaca",
        "split": "train[:1000]",
        "text_column": "text"
    },
    "lora_config": {
        "r": 16,
        "lora_alpha": 32,
        "lora_dropout": 0.05,
        "target_modules": [
            "q_proj",
            "v_proj"
        ],
        "bias": "none"
    },
    "training_params": {
        "epochs": 3,
        "batch_size": 4,
        "learning_rate": 0.0002,
        "warmup_steps": 100,
        "max_seq_length": 512,
        "gradient_accumulation_steps": 4,
        "seed": 42,
        "fp16": true
    },
    "promotion_policy": {
        "threshold": 0.9,
        "forgetting_budget": 0.1,
        "regression_budget": 0.05
    },
    "release_policy": {
        "route_key": "privacy-sensitive-routing",
        "channel": "canary",
        "rollback_enabled": true
    },
    "trust": {
        "trust_core": "software",
        "attestation_required": false
    },
    "privacy": {
        "mode": "n2he",
        "n2he_profile": "router_only",
        "n2he_sidecar": "disabled",
        "n2he_encrypted_logs": true,
        "n2he_service_endpoint": null
    },
    "outputs": {
        "tgsp_required": true,
        "evidence_required": true,
        "registry_required": true,
        "merged_export": false
    },
    "labels": {
        "environment": "development",
        "team": "ml-platform",
        "privacy": "n2he-enabled"
    },
    "annotations": {
        "description": "Local LoRA training with N2HE router-only privacy mode. Routing decisions are made on encrypted features without exposing plaintext.",
        "n2he_note": "Uses embedded TenSEAL for HE operations. No sidecar required for local runs."
    }
}